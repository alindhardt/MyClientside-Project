
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="../../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../../Scripts/DataTables/jquery.dataTables.js"></script>

    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
    <title>Authors</title>
</head>
<body>
    <h1>Authors</h1>

    <table id="authorsTable" class="table details-clickable">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Nationality</th>
            </tr>
        </thead>
    </table>
    <script>
        $(document).ready(function () {
            $("#authorsTable").DataTable({
                rowId: "Id",
                autoWidth: false,
                paging: false,
                info: false,
                searching: false,
                ajax: {
                    url: "/api/authors",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "FirstName"
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "Nationality.Name"
                    }
                ]
            });

            $(".details-clickable").on("click", "tr", function (event, cell, target) {
                //if row has id. Redirect to Details view
                if (event.currentTarget.id) {
                    window.location.href = "/authors/details/" + event.currentTarget.id
                }
            });
        });
    </script>
</body>
</html>
